<div id="card-level" class="bg-white rounded p-3 mx-2 badge-level d-flex flex-column justify-content-start">
    <h5 style="color: white !important;">Level <span class="text-color-<%= level %>"><%= level %></span></h5>
  <div>
    <% if level == 1 %>
      <p style="color: white !important;">On y va Molo</p>
    <% elsif level == 2 %>
      <p style="color: white !important;">On commence à être chaud</p>
    <% else %>
      <p style="color: white !important;">Le code n'a plus de secret</p>
    <% end %>
  </div>
</div>
