<h1 class="user-games-title mt-5 align-items center">Choose a Fighter</h1>
  <%= audio_tag "sound-fight.mp3", id: "game-start-audio" %>
<div class="user-games-form-container mt-4">
  <%= simple_form_for @user_game do |f| %>
    <%= f.input :avatar,
        as: :radio_buttons,
        legend_tag: false,
        label_method: lambda { |photo| render 'avatar', photo: photo },
        input_html: { class: "tag-selector" },
        item_wrapper_class: 'tag-item',
        collection: UserGame::AVATAR_URL %>
    <div class="align-button-center">
      <%= f.submit 'Select', class: "button create-button" %>
    </div>
  <% end %>
</div>

<script>
    var gameStartAudio = document.getElementById('game-start-audio');
      console.log(gameStartAudio)
      gameStartAudio.play();
</script>
